@model IEnumerable<Category>

<div class="container p-0">
    <div class="row p-3">
        <div class="col-6">
            <h4 class="text-primary font-monospace text-start">Categories</h4>
        </div>
        <div class="col-6 text-end">
            <a type="button" class="btn btn-outline-success btn-sm font-monospace" asp-action="Create" asp-controller="Category"> <i class="bi bi-plus-square-fill"></i> Create new category</a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Action
            </th>

        </tr>

    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>
                @item.Name

            </td>
            <td>
                @item.DisplayOrder
            </td>
            <td role="group">
                    <a class= "btn btn-primary btn-sm " style="width:75px" asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id"><i class="bi bi-pencil-square">Edit</i> </a>
                    <a class="btn btn-danger btn-sm " style="width:75px" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id"><i class="bi bi-trash">Delete</i> </a>
            </td>

        </tr>
        }
    </tbody>

</table>
 



